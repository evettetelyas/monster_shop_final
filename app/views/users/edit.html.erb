<center>
    <h2>Edit Your Profile</h2>
    <%= form_for :users_edit, method: :patch do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, value: @user.name %>
      <%= f.label :address %>
      <%= f.text_field :address, value: @address.address %>
      <%= f.label :city %>
      <%= f.text_field :city, value: @address.city %>
      <%= f.label :state %>
      <%= f.text_field :state, value: @address.state %>
      <%= f.label :zip %>
      <%= f.text_field :zip, value: @address.zip %>
      <%= f.label :email %>
      <%= f.email_field :email, value: @user.email %>
      <%= f.submit 'Update Profile' %>
  <% end %>

</center>
