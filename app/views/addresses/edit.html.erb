<center>
    <h1>Edit your address!</h1>
    <%= form_for @address, url: address_show_path do |f| %>
      <%= f.label :nickname %>
      <%= f.text_field :nickname %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :address %>
      <%= f.text_field :address %>
      <%= f.label :city %>
      <%= f.text_field :city %>
      <%= f.label :state %>
      <%= f.text_field :state %>
      <%= f.label :zip %>
      <%= f.text_field :zip %>
      <%= f.submit 'Submit' %>
  <% end %>
  <h1><%= link_to  "Delete Address", "/profile/addresses/#{@address.id}", method: :delete, class: 'btn-small' %></h1>
</center>